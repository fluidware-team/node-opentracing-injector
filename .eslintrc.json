{
    "extends": [
        "standard",
        "prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "complexity": ["error", 5],
        "no-undef": "warn",
        "no-use-before-define": "error",
        "no-console": "warn",
        "camelcase": "off",
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "printWidth": 120,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "parser": "flow",
                "semi": true
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    }
}
